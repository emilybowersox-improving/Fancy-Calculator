@{
    ViewData["Title"] = "Home Page";
}
@model CalculatorViewModel

<div class="text-center">
    <h1 class="display-4">Welcome to the Calculator</h1>
</div>

<div class="text-center">
    <form action="/" method="post">
        <label>Enter the calculation you would like to perform:</label>
        <input type="text" name="Number" placeholder="Numbers go here" value="" />
        <br />
        <button type="submit">Calculate!</button>
    </form>
</div>

@if (Model.LastNumber != null)
{
<div class="text-center">
    <h4>The last number you entered was: @Model.LastNumber.Number</h4>

</div>
}